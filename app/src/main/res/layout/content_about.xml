<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_new"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nilesh.nsec.about"
    tools:showIn="@layout/activity_about">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="full"
        android:clickable="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/imageView4"
            android:src="@drawable/nilesh"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:onClick="onClickY"
            android:tag="YouTube"
            android:clickable="true"/>

        <TextView
            android:onClick="onClickF"
            android:tag="Facebook"
            android:clickable="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nilesh Kumar Pandey"
            android:id="@+id/name"
            android:layout_marginTop="20dp" />

        <TextView
            android:onClick="onClickN"
            android:clickable="true"
            android:tag="NSEC"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1st Year - IT"
            android:id="@+id/stream"
            android:layout_marginTop="20dp" />

        <TextView
            android:onClick="dial"
            android:tag="phone no."
            android:clickable="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="+91-8444865679"
            android:id="@+id/number"
            android:layout_marginTop="20dp" />

        <TextView
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Â©Copyright Reserved\nVersion: 1.20"
            android:id="@+id/textView3"
            android:layout_marginTop="110dp" />
    </LinearLayout>
</RelativeLayout>
