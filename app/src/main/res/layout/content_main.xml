<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_new"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nilesh.nsec.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Period:"
        android:textSize="20sp"
        android:id="@+id/P"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="167dp" />

    <TextView
        android:onClick="countdown"
        android:clickable="true"
        android:layout_width="165dp"
        android:layout_height="105dp"
        android:text="Period"
        android:id="@+id/period"
        android:textSize="17sp"
        tools:layout_editor_absoluteY="165dp"
        tools:layout_editor_absoluteX="179dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Next \nPeriod:"
        android:textSize="20sp"
        android:id="@+id/NP"
        tools:layout_editor_absoluteY="302dp"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:onClick="today"
        android:clickable="true"
        android:layout_width="164dp"
        android:layout_height="100dp"
        android:text="Next Period"
        android:id="@+id/nextPeriod"
        android:textSize="17sp"
        tools:layout_editor_absoluteY="291dp"
        tools:layout_editor_absoluteX="180dp" />


    <TextClock
        android:layout_width="368dp"
        android:layout_height="55dp"
        android:id="@+id/linearLayout"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/day"
        android:textSize="30sp"
        android:text="test"
        tools:layout_conversion_absoluteX="154dp"
        tools:layout_conversion_absoluteY="63dp"
        tools:layout_conversion_absoluteWidth="50dp"
        tools:layout_conversion_absoluteHeight="35dp"
        tools:layout_editor_absoluteY="63dp"
        tools:layout_editor_absoluteX="154dp" />

    <Button
        android:onClick="today"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:text="Today&apos;s Routine"
        android:id="@+id/bToday"
        android:textSize="20sp"
        android:clickable="false"
        android:textColor="#ffffff"
        android:background="#FF3F51B5"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="423dp"
        tools:layout_conversion_absoluteWidth="328dp"
        tools:layout_conversion_absoluteHeight="45dp"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />


</android.support.constraint.ConstraintLayout>
